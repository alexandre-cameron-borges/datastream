# Rename this file to `.env` and fill in the blanks.
# Default values target the local docker-compose stack.
# -----------------------------------------------
# Global
TZ=Europe/Paris
ENV=dev

# -----------------------------------------------
# Airflow
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__WEBSERVER__DEFAULT_UI_TIMEZONE=Europe/Paris
AIRFLOW__WEBSERVER__SECRET_KEY=replace_me_with_a_random_32_chars
AIRFLOW__CORE__FERNET_KEY=replace_me_with_a_fernet_key
# UID used by the official Airflow Docker image
AIRFLOW_UID=50000

# Airflow Connections (URI form). You can also create them via the UI.
# GCP connection uses key_path and project in extra fields.
AIRFLOW_CONN_GCP_DEFAULT=google-cloud-platform://?extra__google_cloud_platform__key_path=/opt/airflow/keys/gcp-sa.json&extra__google_cloud_platform__project=your-gcp-project&extra__google_cloud_platform__scope=https://www.googleapis.com/auth/cloud-platform
# Elasticsearch connection
AIRFLOW_CONN_ES_DEFAULT=elasticsearch://elastic:changeme@elasticsearch:9200
# Kafka / Redpanda connection
AIRFLOW_CONN_KAFKA_DEFAULT=kafka://redpanda:9092

# Airflow Variables (picked up by DAGs)
AIRFLOW_VAR_GCP_PROJECT_ID=your-gcp-project
AIRFLOW_VAR_GCS_BUCKET=your-gcs-bucket
AIRFLOW_VAR_BQ_DATASET=rides
AIRFLOW_VAR_BQ_TABLE=rides_external
AIRFLOW_VAR_BQ_MODEL=rides_fare_model
AIRFLOW_VAR_ELASTIC_INDEX=rides

# -----------------------------------------------
# Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/opt/airflow/keys/gcp-sa.json
GCP_PROJECT_ID=your-gcp-project
GCS_BUCKET=your-gcs-bucket
BQ_DATASET=rides
BQ_TABLE=rides_external
BQ_MODEL=rides_fare_model
BQ_LOCATION=EU

# -----------------------------------------------
# Kafka / Redpanda
KAFKA_BOOTSTRAP_SERVERS=redpanda:9092
KAFKA_SECURITY_PROTOCOL=PLAINTEXT
# Must match your topic creation script
KAFKA_TOPIC_RIDES_RESULT=rides.result

# -----------------------------------------------
# Elasticsearch / Kibana
ELASTIC_HOST=http://elasticsearch:9200
ELASTIC_USERNAME=elastic
ELASTIC_PASSWORD=changeme
ELASTIC_INDEX=rides
KIBANA_HOST=http://kibana:5601

# -----------------------------------------------
# Misc
PYTHONUNBUFFERED=1
